<launch>
<!--    pure nmpc controller-->
    <group ns="fhnp">
        <node pkg="oop_qd_onbd" type="ndp_nmpc_leader_node.py" name="nmpc_node" output="screen" respawn="true"/>
<!--        mavros_node-->
    </group>
    <group ns="xiao_feng">
        <node pkg="oop_qd_onbd" type="nmpc_follower_node.py" name="nmpc_node" output="screen" respawn="true"/>
<!--        mavros_node-->
    </group>
    <group ns="smile_boy">
        <node pkg="oop_qd_onbd" type="nmpc_follower_node.py" name="nmpc_node" output="screen" respawn="true"/>
<!--        mavros_node-->
    </group>

    <include file="$(find dop_sim)/launch/dop_sim.launch">
        <arg name="config_file" value="three_qd_config.yaml" />
        <arg name="rviz_file" value="three_qd.rviz" />
    </include>
</launch>
